{
    "name": "青牛助手",
    "author": "Jimmy Jiang",
    "version": "2.0.8",
    "manifest_version": 2,
    "description": "全方位打造你的工作小助手。无论是上下班考勤，还是加班订餐，都能享受到它所带给你的便利和快感。身为青牛人，你不可错过的一款软件！",
    "icons": {
        "16": "images/logo.png",
        "128": "images/logo128.png"
    },
    "permissions": [
        "<all_urls>",
        "notifications",
        "alarms",
        "storage"
    ],
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "homepage_url": "http://qnsofter.avosapps.com",
    "content_security_policy": "script-src 'unsafe-eval' 'self' ;object-src 'self';",
    "browser_action": {
        "default_icon": {
            "19": "images/logo128.png",
            "38": "images/logo128.png"
        },
        "default_title": "青牛助手",
        "default_popup": "popup.html"
    }
}